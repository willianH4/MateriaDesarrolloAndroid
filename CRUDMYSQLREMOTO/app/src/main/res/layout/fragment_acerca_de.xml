<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AcercaDe"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="18dp">


            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos del desarrollador"
                android:textSize="32sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/space5dp"
                android:textColor="@color/blue"
                android:gravity="center"
                />

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/space10dp"
                card_view:cardCornerRadius="@dimen/space10dp"
                android:layout_margin="0dp"
                card_view:cardBackgroundColor="@color/cardview_dark_background"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/space10dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/foto"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_below="@id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Creador: Willian Adalberto Hernandez Aquino"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginTop="18dp"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_below="@id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grupo: SIS21A"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        />


                    <TextView
                        android:layout_below="@id/tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carnet: 184219"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>