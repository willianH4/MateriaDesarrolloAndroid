<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio1"
    android:orientation="vertical"
    >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CALCULO DE COSTO REAL Y GANANCIAS POR VENTA DE SOFTWARE"
                android:fontFamily="sans-serif"
                android:background="@color/cabeza"
                android:textSize="24dp"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="18dp"
                >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INGRESE CANTIDAD DE SOFTWARE VENDIDOS: "
                android:fontFamily="sans-serif-black"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="18dp"
                />

            <EditText
                android:id="@+id/etCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cantidad de software vendidos"
                android:inputType="number"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:textAlignment="center">

                <Button
                    android:id="@+id/btnCalcular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:background="@color/btn"
                    android:text="Calcular costo y ganancia"/>


                <Button
                    android:id="@+id/btnNuevo"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:background="@color/btn"
                    android:text="Nuevo"/>



            </LinearLayout>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costo real del software"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginTop="32dp"
                />

            <TextView
                android:id="@+id/tvcosto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                />


                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costo de venta:"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_marginTop="32dp"
                    />

                <TextView
                    android:id="@+id/tvventa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    />


                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ganancia: "
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_marginTop="32dp"
                    />

                <TextView
                    android:id="@+id/tvganancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    />
            </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>