    <include layout="@layout/content_productos"/>

    <!-- Inicia la Toolbar
    <RelativeLayout
        android:id="@+id/fabtoolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:backgroundTint="@color/toolbar"
            app:borderWidth="0dp"
            app:fabSize="normal"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fabtoolbar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/uno"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_borrar"
            />

        <ImageView
            android:id="@+id/dos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_list"
            />

        <ImageView
            android:id="@+id/tres"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_spinner"
            />

        <ImageView
            android:id="@+id/cuatro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:tooltipText="Recyclerview"
            android:src="@drawable/ic_recycler"
            />

        <ImageView
            android:id="@+id/cinco"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_paste"
            />

        <ImageView
            android:id="@+id/seis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_paste"
            />

    </LinearLayout>

</com.github.fafaldo.fabtoolbar.widget.FABToolbarLayout>
Termina la toolbar -->

    <!-- Inicia bloque para menu en button -->
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit"
            app:backgroundTint="@color/cian"
            app:borderWidth="0dp"
            app:fab_label="Salir"
            app:fab_size="mini"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_autor"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp"
            app:fab_label="Autor"
            app:fab_size="mini"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_atras"
            app:backgroundTint="@color/colorAccent"
            app:borderWidth="0dp"
            app:fab_label="Retornar"
            app:fab_size="mini"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recycler"
            app:backgroundTint="@color/colorAccent"
            app:borderWidth="0dp"
            app:fab_label="Recyclerview"
            app:fab_size="mini"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_list"
            app:backgroundTint="@color/colorAccent"
            app:borderWidth="0dp"
            app:fab_label="ListView"
            app:fab_size="mini"
            />

    </com.github.clans.fab.FloatingActionMenu>

    <!-- Finaliza bloque para menu en button -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
