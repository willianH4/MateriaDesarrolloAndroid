<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="0dp"
        card_view:cardBackgroundColor="#019146"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="145dp"
                android:padding="4dp"
                android:src="@drawable/trabajador" />
            <TextView
                android:id="@+id/textViewid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* Id: "
                android:background="@color/nuevo"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff" />
            <TextView
                android:id="@+id/textViewid1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewid"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* 1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/textViewnom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewid1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:text="* Nombre"
                android:background="@color/nuevo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                />
            <TextView
                android:id="@+id/textViewnom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewnom"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="INR "
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewnom1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* Apellido: "
                android:background="@color/nuevo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                />
            <TextView
                android:id="@+id/textViewape1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewape"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="xxxxxxx"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <TextView
                android:id="@+id/textViewcorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewape1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* Correo: "
                android:background="@color/nuevo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                />
            <TextView
                android:id="@+id/textViewcorreo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewcorreo"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="xxxxxxxx"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <TextView
                android:id="@+id/textViewusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewcorreo1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* Usuario: "
                android:background="@color/nuevo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                />
            <TextView
                android:id="@+id/textViewusuario1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewusuario"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="xxxxxxxx"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewclave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewusuario1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* Clave: "
                android:background="@color/nuevo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                />
            <TextView
                android:id="@+id/textViewclave1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewclave"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="xxxxxxxx"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewtipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewclave1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* Tipo: "
                android:background="@color/nuevo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                />
            <TextView
                android:id="@+id/textViewtipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewtipo"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="xxxxxxxx"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewestado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewtipo1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* Estado: "
                android:background="@color/nuevo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                />

            <TextView
                android:id="@+id/textViewestado1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewestado"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="xxxxxxxx"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewpregunt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewestado1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* Pregunta: "
                android:background="@color/nuevo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                />
            <TextView
                android:id="@+id/textViewpregunt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewpregunt"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="xxxxxxxx"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewrespuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewpregunt1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="* Respuesta: "
                android:background="@color/nuevo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                />
            <TextView
                android:id="@+id/textViewrespuest1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewrespuest"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="xxxxxxxx"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <TextView
                android:id="@+id/textViewOtro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewrespuest1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="..."
                android:background="@color/nuevo2"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>