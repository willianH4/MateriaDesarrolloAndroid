    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <!-- Inicia bloque para menu en button -->
        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            >

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_exit"
                app:backgroundTint="@color/cian"
                app:borderWidth="0dp"
                app:fab_label="Salir"
                app:fab_size="mini"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_autor"
                app:backgroundTint="@color/colorPrimary"
                app:borderWidth="0dp"
                app:fab_label="Autor"
                app:fab_size="mini"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_atras"
                app:backgroundTint="@color/colorAccent"
                app:borderWidth="0dp"
                app:fab_label="Retornar"
                app:fab_size="mini"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_recycler"
                app:backgroundTint="@color/colorAccent"
                app:borderWidth="0dp"
                app:fab_label="Recyclerview"
                app:fab_size="mini"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/item5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_list"
                app:backgroundTint="@color/colorAccent"
                app:borderWidth="0dp"
                app:fab_label="ListView"
                app:fab_size="mini"
                />

        </com.github.clans.fab.FloatingActionMenu>

        <!-- Finaliza bloque para menu en button -->


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>