<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAE200"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    >

    <TextView
        android:id="@+id/tv"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/estilotextview"
        android:fontFamily="serif-monospace"
        android:text="Menu"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="26dp"
        android:textStyle="bold" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="400px"
                android:layout_height="400px"
                android:layout_margin="10dp"
                android:background="#fff"
                android:layout_gravity="center"
                android:src="@drawable/producto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vista Usuario"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:background="@drawable/estilotextview"/>

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IR"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/estiloboton"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vista Categoria"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:background="@drawable/estilotextview"/>

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IR"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/estiloboton"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vista Producto"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:background="@drawable/estilotextview"/>

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IR"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/estiloboton"
                />
            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creadores"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/estiloboton"
                />





        </LinearLayout>
    </ScrollView>

</LinearLayout>


